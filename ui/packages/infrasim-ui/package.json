    "@types/react-dom": "18.3.0",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.37.2",
    "tsup": "8.3.0",
    "typescript": "5.5.4"
  }
